# WEB DATA APP which is pulling real time stock data by using streamlit and yfinance
import yfinance as yf
import streamlit as st
import pandas as pd
import datetime

st.write("""
#Simple Stock Price

Shown are the stock clossing price and volume of google!

""")
now = datetime.datetime.now()

#define the ticket symbol

tickerSymbol= "GOOGL"
#get data on the ticker
tickerData = yf.Ticker(tickerSymbol)
#get the historical price for the ticker
tickerdf= tickerData.history(period="1d", start= "2010-5-31", end= "2021-1-12")
# open high low close   volume  dividends  stock splits

st.line_chart(tickerdf.Close)
st.line_chart(tickerdf.Volume)
